@model Hrp_FR.Models.AydinlatmaModel
@{
    ViewBag.Title = "LightingDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="hero-wrap ftco-degree-bg mobilAnaDiv">
    <img src="~/Content/HRP/anaresimler/aboutGorsel2-min.png" class="anaGorsel" style="width:100%; margin:auto; text-align:center; margin-top:-342px" />

    <div class="container">
        <div class="row no-gutters slider-text justify-content-center align-items-center">
            <div class="col-lg-8 col-md-6 ftco-animate d-flex align-items-end">

            </div>
        </div>
    </div>
    <div class="mouse">
        <a href="#" class="mouse-icon">
            <div class="mouse-wheel"><span class="ion-ios-arrow-round-down"></span></div>
        </a>
    </div>
</div>

@*---DETAY---*@
<section class="ftco-section ftco-property-details">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="property-details fade">
                    <div class="slideshow-container fade mobilDetayDiv" style="padding-top:100px">
                        @foreach (var item in Model.Images)
                        {
                            <div class="mySlides fade">

                                <img class="fade MobilDetay" src="~/Content/HRP/Aydınlatma/@item.Klasor/@item.ImagePath" style="width:80%">

                            </div>
                        }
                        <!-- Full-width images with number and caption text -->
                        <!-- Next and previous buttons -->
                        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                        <a class="next" onclick="plusSlides(1)">&#10095;</a>
                    </div>
                    <br>

                    <!-- The dots/circles -->
                    <div style="text-align:center;margin-right: 60px;">
                        @for (int i = 1; i <= Model.Images.Count; i++)
                        {
                            <span class="dot" onclick="currentSlide(@i)"></span>

                        }

                    </div>






                </div>
            </div>
            <div class="col-lg-7 col-md-7 col-sm-12 col-xs-12">
                <div class="sidebar">
                    <div class="portfolio-desc">
                        <h3 class="widget-title" style="margin-top:35px">@Model.UrunAdi</h3>
                        <p>
                            <table class="table table-bordered table-responsive" border=1 cellpadding="10" cellspacing="10">
                                <tr>
                                    <th> Nom du produit</th>
                                    <td>@Model.UrunAdi</td>
                                </tr>
                                <tr>
                                    <th>Largeur</th>
                                    <td>@Model.En</td>
                                </tr>
                                <tr>
                                    <th>Taille</th>
                                    <td>@Model.Boy</td>
                                </tr>
                                <tr>
                                    <th>Hauteur</th>
                                    <td>@Model.Yukseklik</td>
                                </tr>
                                <tr>
                                    <th> Options de Matériaux </th>
                                    <td>@Model.Malzeme</td>
                                </tr>
                                <tr>
                                    <th> Options de Couleur </th>
                                    <td>@Model.Renk</td>
                                </tr>
                                @if (Model.Yuzeytipi != null)
                                {
                                    <tr>
                                        <th>Options de Plancher à la</th>
                                        <td>@Model.Yuzeytipi</td>
                                    </tr>
                                }
                            <tr>
                                <th>Détail de Matériel Supplémentaire </th>
                                <td>@Model.EkMalzeme</td>
                            </tr>
                                <tr>
                                    <th>  Nettoyage et Entretien </th>
                                    <td>@Model.TemizlikveBakim</td>
                                </tr>


                            </table>
                        </p>

                    </div>
                </div>
            </div>
        </div>

    </div>
</section>







